{% block main %}

	{{ form_start(form) }}
	<div id="main" class="d-flex justify-content-center">
		<div class="card m-3 text-center" style="width: 25%">
			{% trans %}
			<div class="card-header">

				Calculation of the cost including tax
			</div>
			{% endtrans %}

			<div class="card-body d-flex flex-column">
				<div class="mt-2">
					<form>
						{{ form_row(form.productList) }}
						{{ form_row(form.productCode) }}
						{# {{ form_row(form) }} #}
						<div class="btn-group btn-group-justified mt-2">
							{{ form_row(form.submit) }}
						</div>
					</form>
				</div>

			</div>

		</div>

	</div>
 
{% endblock %}
